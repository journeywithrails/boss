<% content_for "stylesheets" do %>
	<%= stylesheet_link_tag "/yui/build/reset-fonts-grids/reset-fonts-grids.css" %>			  
	<%= stylesheet_link_tag "/themes/static.css" %>	
	<%= default_theme_controller("contest") %>	
  <%= stylesheet_ie6 %>
<% end %>

<% content_for :header do %>	    	
	<%= render :partial => "contest/header" %>
<% end %>   
	 

<% content_for :main do %>
   <div id="bd">

		<div class="yui-g">

			<% if ::AppConfig.contest.bybs %>
			<h1 id="title_1"><%= _('Increase your chances to WIN*') %></h1>
			<% end %>
			<div style="margin-left: 64px;">
				<div>
					<img src="/images/contest/lbl_invite_friends.gif" width="826px" height:="30px" align="absbottom" alt="Invite Friends">
				</div>
				<div id="taf_contest_form">
					<p class='taf_header taf_error'>
<%= flash.now[:warning] %></p><br/>
<% form_for(:referral, :url => {:controller => :referral, :action => :create} ) do |f| %>
	<%= render :partial => "referral/form", :locals => {:f => f, :referral => @referral } %>
<% end %>
				</div>
				<% if ::AppConfig.contest.bybs %>
				<% contest_rules = _("Contest Rules") %>
				<div id="taf_caption"><%= _("* See %{contest_rules_link}") % {:contest_rules_link => "<a style='color: white' href='/contest/rules'>#{contest_rules}</a>"} %></div>
				<% end %>
			</div>
			
		</div>

	</div>
<% end %>
