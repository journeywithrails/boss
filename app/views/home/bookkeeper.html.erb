<% content_for "stylesheets" do %>
	<%= stylesheet_link_tag "/yui/build/reset-fonts-grids/reset-fonts-grids.css" %>

	<%= default_theme_controller("home") %>
	<%= stylesheet_link_tag "/themes/static.css" %>
<% end %>
<% content_for :header do %>
	<%= render :partial => "home/header" %>
<% end %>
<% content_for :main do %>
	<div id="content_container">
	    <!-- ROUNDED CORNERS - WITH INFOBOX -->
	    <div class="corner_large_tr" style="clear: both;">
	        <div class="corner_large_tl">
	            <div class="infobox">
	                <p>
	                    <%= _('Inviting a bookkeeper or accountant to view your records') %> 
	                </p>
	            </div>
	        </div>
	    </div>
	    <!-- CONTENT SECTION -->
	    <div class="content">
	        <br/>
	        <span><%= _('To share your invoicing activity data with your bookkeeper or accountant, follow these simple steps:') %> </span>

			<ol style="margin-left: 40px">
	        	<li style="list-style: decimal">
	        		<%= _('Login or signup to Billing Boss.') %>
	        	</li>
				<li style="list-style: decimal">
	        		<%= _('Click on the Share Data tab in the navigation menu.') %>
	        	</li>
				<li style="list-style: decimal">
	        		<%= _('Click on the "Send email invitation to share data" link on the left menu.') %>
	        	</li>
				<li style="list-style: decimal">
	        		<%= _("Enter your bookkeeper's or accountant's email and click Send.") %>
	        	</li>
			</ol><br/>
			<span><%= _('Your bookkeeper will then receive the invitation in his or her email, and will be able to confirm or decline the request. If the bookkeeper or accountant accepts, he or she will be able to access your invoicing activity reports.') %></span>
	    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		</div>
	    <!-- BOTTOM CORNERS -->
	    <div class="corner_large_bl">
	        <div class="corner_large_br">
	        </div>
	    </div>
	    <!-- END OF ROUNDED CORNERS -->
	</div>
<% end %>
